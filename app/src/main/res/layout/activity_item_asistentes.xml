<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingTop="25dp"
    tools:context=".Asistentes.ItemAsistentesActivity">

    <ImageView
        android:id="@+id/IvFotoPerfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/TvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre y apellidos"
        app:layout_constraintStart_toEndOf="@id/IvFotoPerfil"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/TvCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo"
        app:layout_constraintStart_toEndOf="@id/IvFotoPerfil"
       app:layout_constraintTop_toBottomOf="@id/TvNombre"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/TvBiografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:text="biografia"
        app:layout_constraintStart_toEndOf="@id/IvFotoPerfil"
        app:layout_constraintTop_toBottomOf="@id/TvCorreo"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>